<h2>New Student</h2>

<%= form_with(model: @student, local: true) do |form| %>

  <% if @student.errors.any? %>
    <h3>
      <%= pluralize(@student.errors.count, 'error') %>
      prevented this student from being saved:
    </h3>
    <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %>.</li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: 'student_name' %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
